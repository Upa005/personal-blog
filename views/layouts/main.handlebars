<!DOCTYPE html>
<html lang="en">
<head>
  <base href="/">
  <!-- Basic metadata -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="{{ description }}">
  <meta name="author" content="{{ settings.authorName }}">

  <title>{{ title }} | {{ settings.siteName }}</title>

  <!-- Favicon -->
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
  <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">

  {{> head/social }}

  {{> head/styles }}
</head>
<body>

<header id="author" class="container header" itemscope itemprop="Person" itemtype="http://schema.org/Person">
  {{> social-links }}
  <h1><a href="/" itemprop="name">{{ settings.siteName }}</a></h1>
  <h5 itemprop="description">{{ settings.siteDescription }}</h5>
</header>

<div class="container main">
  <div class="row">
    <div class="column">
      {{{body}}}
    </div>
  </div>
</div>

{{> footer }}
