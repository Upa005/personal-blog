<div class="page-indicator">{{ title }}</div>
<div class="post" id="post-{{post._id}}">
  <form>
    <label for="title" class="required">Name</label>
    <input name="title" type="text" value="{{post.title}}" id="title" required>

    <label for="content" class="required">Content</label>
    <textarea name="content" id="content" required>{{{ post.content }}}</textarea>

    <label for="type" class="required">Type</label>
    <select id="type" name="type">
      <option value="blog">blog</option>
      <option value="link">link</option>
      <option value="page">page</option>
      <option value="project">project</option>
    </select>

    <div class="extra">
      <label for="_id">ID</label>
      <input name="_id" type="text" value="{{post._id}}" id="_id">

      <label for="imageUrl">Image Url</label>
      <input name="imageUrl" type="text" value="{{post.imageUrl}}" id="imageUrl">

      <label for="postUrl">Post Url</label>
      <input name="postUrl" type="text" value="{{post.postUrl}}" id="postUrl">

      <label for="tags">Tags</label>
      <input name="tags" type="text" value="" id="tags">
    </div>
  </form>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
<script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
