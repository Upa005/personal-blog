<div class="page-indicator">{{ title }}</div>
<div class="posts">
  {{#each posts}}
    <div class="post">
      <!-- Post Title -->
      <h2>
        <a href="/posts/{{this._id}}">{{this.title}}</a>
      </h2>

      <!-- Metadata -->
      <div class="row">
        <div class="column">
          {{> type type=this.type }}
        </div>
        <div class="column">
          {{> date date=this.date }}
        </div>
        <div class="column">
          {{> tags tags=this.tags }}
        </div>
      </div>

      <!-- Post Summary -->
      {{#if this.summary}}
        <div>{{{ this.summary }}}</div>
      {{/if }}
    </div>
  {{/each}}
</div>
<div class="pagination-container">{{> pagination }}</div>
