<div class="post" id="post-{{post._id}}">
  <h1>{{post.title}}</h1>

  <!-- Metadata -->
  <div class="row">
    <div class="column">
      {{> type type=post.type }}
    </div>
    <div class="column">
      {{> date date=post.date }}
    </div>
    <div class="column">
      {{> tags tags=post.tags }}
    </div>
  </div>

  {{> share post=post }}

  {{#if post.imageUrl}}
    <div class="post-image"><img src="{{ post.imageUrl }}"></div>
  {{/if}}

  <div class="post-content">{{{ post.content }}}</div>

  <div class="link-button">
    {{#if_string post.type 'link' }}
      <a href="{{ post.postUrl }}" class="button">
        <i class="icons icon-book-open"></i>
        Read More
      </a>
    {{/if_string}}
  </div>

  {{#if_string settings.environment 'development'}}
    <div>
      <a href="/posts/{{post._id}}/edit">Edit</a>
    </div>
  {{/if_string}}

</div>
